
-- Full Roblox GUI Script with all requested features

-- Fade animation function
function fadeIn(gui, duration)
    for i = 0, 1, 0.05 do
        gui.BackgroundTransparency = 1 - i
        wait(duration / 20)
    end
end

function fadeOut(gui, duration)
    for i = 0, 1, 0.05 do
        gui.BackgroundTransparency = i
        wait(duration / 20)
    end
end

-- Main GUI creation
local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local MinimizeButton = Instance.new("TextButton")
local CloseButton = Instance.new("TextButton")
local UIListLayout = Instance.new("UIListLayout")
local RedBorder = Instance.new("Frame")

ScreenGui.Parent = game.CoreGui
ScreenGui.ResetOnSpawn = false

-- Main frame properties
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
MainFrame.BackgroundTransparency = 0.3
MainFrame.BorderSizePixel = 0
MainFrame.Position = UDim2.new(0.35, 0, 0.3, 0)
MainFrame.Size = UDim2.new(0, 400, 0, 500) -- Adjusted for a shorter vertical frame
MainFrame.Active = true
MainFrame.Draggable = true

-- Red Border
RedBorder.Parent = MainFrame
RedBorder.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
RedBorder.Size = UDim2.new(1, 4, 1, 4)
RedBorder.Position = UDim2.new(-0.02, 0, -0.02, 0)
RedBorder.ZIndex = 0

-- Minimize button
MinimizeButton.Parent = MainFrame
MinimizeButton.Text = "_"
MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
MinimizeButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
MinimizeButton.Position = UDim2.new(0.85, 0, 0, 0)
MinimizeButton.Size = UDim2.new(0, 30, 0, 30)
MinimizeButton.Font = Enum.Font.SourceSans
MinimizeButton.TextSize = 24

-- Close button
CloseButton.Parent = MainFrame
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
CloseButton.Position = UDim2.new(0.92, 0, 0, 0)
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Font = Enum.Font.SourceSans
CloseButton.TextSize = 24

-- UI Layout for Buttons
UIListLayout.Parent = MainFrame
UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Padding = UDim.new(0, 10)

-- Button properties template
function createButton(parent, text, script)
    local Button = Instance.new("TextButton")
    Button.Parent = parent
    Button.Text = text
    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    Button.BackgroundColor3 = Color3.fromRGB(139, 0, 0)
    Button.Size = UDim2.new(0, 350, 0, 40)
    Button.Font = Enum.Font.SourceSans
    Button.TextSize = 18
    Button.MouseButton1Click:Connect(function()
        loadstring(script)()
    end)
end

-- Add all buttons
createButton(MainFrame, "Chat Bypass #1", 'game:HttpGet("https://pastefy.app/CJ0E33tA/raw")')
