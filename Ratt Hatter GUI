-- Create the ScreenGui for the player
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "RattHatterV3Gui"
screenGui.ResetOnSpawn = false  -- Keeps the GUI persistent after respawn

-- Create the main frame
local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0, 500, 0, 600)
mainFrame.Position = UDim2.new(0.5, -250, 0.5, -300)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true

-- Gradient background for the main frame
local frameGradient = Instance.new("UIGradient", mainFrame)
frameGradient.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0, Color3.fromRGB(30, 30, 30)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(50, 0, 0))
})
frameGradient.Rotation = 45

-- Add rounded corners to the main frame
local mainFrameCorner = Instance.new("UICorner", mainFrame)
mainFrameCorner.CornerRadius = UDim.new(0, 15)

-- Add a title label
local titleLabel = Instance.new("TextLabel", mainFrame)
titleLabel.Size = UDim2.new(1, 0, 0, 50)
titleLabel.Position = UDim2.new(0, 0, 0, 10)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "üêÄ Ratt Hatter"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextScaled = true
titleLabel.Font = Enum.Font.GothamBold
titleLabel.TextStrokeTransparency = 0.5
titleLabel.TextStrokeColor3 = Color3.fromRGB(200, 0, 0)
titleLabel.TextTransparency = 0.2

-- Create the close button
local closeButton = Instance.new("TextButton", mainFrame)
closeButton.Size = UDim2.new(0, 40, 0, 40)
closeButton.Position = UDim2.new(1, -50, 0, 5)
closeButton.Text = "X"
closeButton.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Font = Enum.Font.GothamBold
closeButton.TextScaled = true
closeButton.BorderSizePixel = 0
closeButton.TextTransparency = 0.5

-- Add rounded corners to the close button
local closeButtonCorner = Instance.new("UICorner", closeButton)
closeButtonCorner.CornerRadius = UDim.new(0, 10)

-- Close button functionality
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Create the scrolling frame for buttons
local scrollFrame = Instance.new("ScrollingFrame", mainFrame)
scrollFrame.Size = UDim2.new(1, -20, 0, 500)
scrollFrame.Position = UDim2.new(0, 10, 0, 70)
scrollFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
scrollFrame.ScrollBarThickness = 10
scrollFrame.BorderSizePixel = 0
scrollFrame.BackgroundTransparency = 0.5

-- Add rounded corners to the scrolling frame
local scrollFrameCorner = Instance.new("UICorner", scrollFrame)
scrollFrameCorner.CornerRadius = UDim.new(0, 15)

-- Layout for buttons
local layout = Instance.new("UIGridLayout", scrollFrame)
layout.CellSize = UDim2.new(0, 130, 0, 50)
layout.CellPadding = UDim2.new(0, 5, 0, 5)

-- Function to add buttons with rounded corners and smooth transitions
local function addButton(text, scriptUrl)
    local button = Instance.new("TextButton", scrollFrame)
    button.Size = UDim2.new(0, 120, 0, 50)
    button.Text = text
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.BackgroundColor3 = Color3.fromRGB(80, 0, 0)
    button.Font = Enum.Font.Gotham
    button.TextScaled = true
    button.TextTransparency = 0.5

    -- Add rounded corners to the button
    local buttonCorner = Instance.new("UICorner", button)
    buttonCorner.CornerRadius = UDim.new(0, 10)

    -- Button hover effects
    button.MouseEnter:Connect(function()
        game:GetService("TweenService"):Create(button, TweenInfo.new(0.2, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {BackgroundColor3 = Color3.fromRGB(200, 0, 0), TextTransparency = 0}):Play()
    end)
    button.MouseLeave:Connect(function()
        game:GetService("TweenService"):Create(button, TweenInfo.new(0.2, Enum.EasingStyle.Sine, Enum.EasingDirection.In), {BackgroundColor3 = Color3.fromRGB(80, 0, 0), TextTransparency = 0.5}):Play()
    end)

    -- Button click functionality with script loading
    button.MouseButton1Click:Connect(function()
        game:GetService("TweenService"):Create(button, TweenInfo.new(0.1, Enum.EasingStyle.Bounce, Enum.EasingDirection.Out), {TextTransparency = 1}):Play()
        wait(0.2)
        loadstring(game:HttpGet(scriptUrl))()
    end)
end

-- Add buttons with respective scripts
addButton("Chat Bypass #1", "https://pastefy.app/CJ0E33tA/raw")
addButton("Chat Bypass (OUTDATED) #2", "https://raw.githubusercontent.com/BakaPraselol/MRCBV4LSB4KRS/main/Loader")
addButton("Chat Bypass (Artify) #3", "https://pastefy.app/r39aZhXJ/raw")
addButton("Chat Bypass #4", "https://raw.githubusercontent.com/Synergy-Networks/products/main/BetterBypasser/loader.lua")
addButton("Bang Inf Yield #1", "https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source")
addButton("Bang Inf Yield (Dolphin) #2", "https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source")
addButton("Inf Yield #3", "https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source")
addButton("MM2 GUI", "https://raw.githubusercontent.com/Doggo-cryto/EclipseMM2/master/Script")
addButton("Faker IPs", "https://pastefy.app/nqncsXed/raw")
